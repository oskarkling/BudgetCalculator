<Window x:Class="WpfApp1.Views.AddExpense"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="AddExpense" Height="450" Width="800">
    <Grid>
        <Border CornerRadius="15" Grid.RowSpan="2">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#7be9f6" Offset="0.0"/>
                    <GradientStop Color="#f083da" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>            
        </Border>
        <StackPanel HorizontalAlignment="Center">
            <!--name of expense-->
            <Label HorizontalAlignment="Center" Content="Name of Expense"></Label>
            <!--Ev max värde på hur många tecken på input-->
            <TextBox x:Name="expenseName" FontFamily="Helvetica"
                       FontWeight="Light"
                       Text="Ex Car"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       Foreground="White"
                       Background="Transparent"
                       BorderThickness="0"
                       Width="100"                    
                       Opacity="0.5"
                       Margin="0,0,0,0"/>
            <Border 
            Width="100" 
            Height="2" 
            Background="White"
            Opacity="0.5"
                Margin="0 0 0 10"/>
            <Label HorizontalAlignment="Center" Content="Timespan"></Label>
            <ComboBox x:Name="expenseTimespan">
                <ComboBoxItem Content="Every Month"/>
                <ComboBoxItem Content="Only Once"/>
                <ComboBoxItem Content="Every Other Month"/>
                <ComboBoxItem Content="Quarterly"/>
                <ComboBoxItem Content="Half Year"/>
                <ComboBoxItem Content="Every Year"/>
            </ComboBox>
            <!--amount of expense-->
            <Label HorizontalAlignment="Center" Content="Amount"></Label>
            <!--Ev max värde på hur många tecken på input-->
            <TextBox x:Name="expenseAmount" FontFamily="Helvetica"
                       FontWeight="Light"
                       Text="Ex 5000"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       Foreground="White"
                       Background="Transparent"
                       BorderThickness="0"
                       Width="100"                    
                       Opacity="0.5"
                       Margin="0,0,0,0"/>
            <Border 
            Width="100" 
            Height="2" 
            Background="White"
            Opacity="0.5"
                Margin="0 0 0 10"/>
            <Button VerticalAlignment ="Top" Width="100" Height="40" Content="ADD EXPENSE" 
                    Margin="60,0,60,0" Click="AddExpenseBtn_Click"/>
            <Button VerticalAlignment ="Top" Width="100" Height="40" Content="BACK" 
                    Margin="60,0,60,0" Click="Back_Click"/>

        </StackPanel>
        
    </Grid>
</Window>
